<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Security_Map.Views.Registros.Registro" BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ocorrências Recentes" TextColor="Gray" FontSize="20" FontAttributes="Bold"/>
            <ListView x:Name="listView" HasUnevenRows="True" ItemsSource="{Binding Registros}" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding dsRegistro}" FontSize="18" FontAttributes="Bold" 
                                       TextColor="Black"/>
                                <Label Text="{Binding MtRegistro}" FontSize="14"
                                       TextColor="Black"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>